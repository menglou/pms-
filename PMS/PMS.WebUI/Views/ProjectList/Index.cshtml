                        <div><img src="~/Image/banner2.jpg" style="width:100%;height:100%"  /></div>
                        <div><img src="~/Image/banner3.jpg" style="width:100%;height:100%"   /></div>
                        <div><img src="~/Image/banner4.jpg" style="width:100%;height:100%"  /></div>
                        <div><img src="~/Image/banner1.jpg" style="width:100%;height:100%"   /></div>
                    </div>
                </div>
            </div>

            <!--项目列表部分-->
            <div style="margin-top:20px;">
                <div style="font-size:20px;margin-bottom:15px;">
                    结业实战项目
                </div>
                <div style="height:1px;background-color:#eee;margin-bottom:15px;float:left;width:100%">
                </div>
                   
                    @if (Model.Count() != 0)
                    {
                        foreach (var project in Model)
                        {
                             <!--列表信息-->
                            <div style="margin-bottom:20px;float:left;width:100%">
                                    <div style="float:left;width:50%;background-color:#eee">
                                        <img src='@string.Format("../Image/ProImage/{0}.jpg",project.ProjectIdUIModel)' style="height:300px;width:98%" />
                                    </div>
                                    <div style="float:left;background-color:#eee;width:50%;height:300px">
                                        <div style="font-size:22px;margin-top:10px;margin-bottom:20px;width:100%">
                                            @project.ProjectNameUIModel
                                        </div>
                                        <div style="font-size:16px;margin-bottom:20px;float:left;width:100%">
                                            @project.ProjectFrameworkUIModel
                                        </div>
                                        <div style="margin-bottom:50px;float:left;width:100%">
                                            <ul style="list-style:none;display:inline">
                                                <li style="float:left"><img src="http://t.cn/RCzsdCq" class="layui-nav-img">@project.LecturerNameUIModel</li>
                                                <li style="float:left;margin-left:40px;margin-top:5px;">|</li>
                                                <li style="float:left;margin-left:40px;margin-top:5px;">@project.AttentProCount 人参与</li>
                                            </ul>

                                        </div>
                                        <div style="font-size:25px;color:sandybrown;float:left;width:100%">
                                            @project.ProdifficultyUIModel
                                        </div>
                                        <div style="font-size:25px;color:sandybrown;float:right;margin-right:15px;">
                                            <button class="layui-btn layui-btn-warm" data-href="@project.ProjectIdUIModel" data-type="btnattend">
                                                <i class="layui-icon layui-icon-auz"></i>
                                                立即报名
                                            </button>
                                        </div>
                                    </div>
                            </div>
                        }
                    }
