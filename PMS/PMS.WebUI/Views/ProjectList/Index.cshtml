    <script src="~/Conetnt/layui/layui.js"></script>

    <script>
        layui.use(['carousel','jquery','element'], function () {

            var carousel = layui.carousel,
                $=layui.$,
                element = layui.element;

            carousel.render({
                elem: '#test1',
                width: '100%', //设置容器宽度 
                arrow: 'always' //始终显示箭头
                //,anim: 'updown' //切换动画方式
            });



            $("[data-type='btnattend']").click(function () {

                var $href = $(this).attr("data-href");

                ////$("#main_Content").attr('src', $href);
                //$.post("/ProjectList/RedictPreviewProInfo", { projectid: $href }, function (data,status)
